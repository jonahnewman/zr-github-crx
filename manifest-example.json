{
  "manifest_version": 2,
  "name": "ZR GitHub",
  "description": "Adds GitHub capabilities to the ZR website",
  "version": "0.1.0",
  "update_url": "www.example.com",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://zerorobotics.mit.edu/ide/*"],
      "exclude_matches": ["http://zerorobotics.mit.edu/ide/simulation/*"],
      "js": ["content.js"]
    }
  ],
  "page_action": {
    "default_title": "GitHub interface",
    "default_popup": "popup.html"
  },
   "permissions": [
    "activeTab",
    "identity",
    "storage",
    "declarativeContent",
    "http://zerorobotics.mit.edu/",
    "https://github.com/"
  ],
  "web_accessible_resources": [
    "ace-diff/*"
  ]
}
